<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp">

            <TextView
                android:id="@+id/wxcDateText"
                android:layout_width="253dp"
                android:layout_height="22dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="WXC Date: DD-MM-YYYY"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/assaultTacticianTable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerStatsTitle"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/playerStatsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:text="WXC Stats"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout

                android:id="@+id/supportSniperTable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="180dp"
                android:background="@color/colorOrangeDark"
                android:gravity="center"
                android:shrinkColumns="0"
                android:stretchColumns="0,1,2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerStatsTitle">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"

                    >

                    <TextView
                        android:id="@+id/supportText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_span="2"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Support"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sniperText"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_span="2"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Sniper"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/supportBlurb"
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="2dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:hyphenationFrequency="none"
                        android:padding="4dp"
                        android:text='"Awarded for safeguarding the team, providing fire support and administering emergency medical care"'
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/supportMedal"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="false"
                        android:background="@color/colorPrimary"
                        android:cropToPadding="true"
                        android:foregroundGravity="top"
                        app:layout_constraintStart_toStartOf="@+id/assaultTacticianTable"
                        app:layout_constraintTop_toTopOf="@+id/assaultTacticianTable"
                        app:srcCompat="@drawable/support_medal" />

                    <TextView
                        android:id="@+id/sniperBlurb"
                        android:layout_width="102dp"
                        android:layout_height="80dp"
                        android:layout_column="1"
                        android:layout_marginLeft="2dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:hyphenationFrequency="none"
                        android:padding="4dp"
                        android:text='"Awarded for attaining multiple long range kills, with a focus on headshots and accuracy"'
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/sniperMedal"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="0dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/assaultTacticianTable"
                        app:layout_constraintTop_toTopOf="@+id/assaultTacticianTable"
                        app:srcCompat="@drawable/sniper_medal" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/supportNameValue"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_span="2"
                        android:background="@color/colorGold"
                        android:gravity="center"
                        android:text="GAMERTAG"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sniperNameValue"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_span="2"
                        android:background="@color/colorGold"
                        android:gravity="center"
                        android:text="GAMERTAG"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>


            </TableLayout>

            <TableLayout

                android:id="@+id/assaultTacticianTable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:background="@color/colorOrangeDark"
                android:gravity="center"
                android:shrinkColumns="0"
                android:stretchColumns="0,1,2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerStatsTitle">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"

                    >

                    <TextView
                        android:id="@+id/assaultText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_span="2"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Assault"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tacticianText"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_span="2"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Tactician"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/winPlaceValue"
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="2dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        android:text='"Awarded for confirming a huge number of KIAs and dealing heavy damage to the enemy"'
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:textStyle="italic"
                        android:hyphenationFrequency="none" />

                    <ImageView
                        android:id="@+id/assaultMedal"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="false"
                        android:background="@color/colorPrimary"
                        android:cropToPadding="true"
                        android:foregroundGravity="top"
                        app:layout_constraintStart_toStartOf="@+id/assaultTacticianTable"
                        app:layout_constraintTop_toTopOf="@+id/assaultTacticianTable"
                        app:srcCompat="@drawable/assault_medal" />

                    <TextView
                        android:id="@+id/killPlaceValue"
                        android:layout_width="102dp"
                        android:layout_height="80dp"
                        android:layout_column="1"
                        android:layout_marginLeft="2dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        android:text='"Awarded for smart, tactical decisions, and surviving against all odds"'
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:textStyle="italic"
                        android:hyphenationFrequency="none" />

                    <ImageView
                        android:id="@+id/tactitianMedal"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="0dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/assaultTacticianTable"
                        app:layout_constraintTop_toTopOf="@+id/assaultTacticianTable"
                        app:srcCompat="@drawable/tactictian_medal" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/assaultNameValue"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_span="2"
                        android:background="@color/colorGold"
                        android:gravity="center"
                        android:text="GAMERTAG"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tacticianNameValue"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_span="2"
                        android:background="@color/colorGold"
                        android:gravity="center"
                        android:text="GAMERTAG"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>


            </TableLayout>

            <TableLayout

                android:id="@+id/tableLayout5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorOrangeLight"
                android:gravity="center"
                android:stretchColumns="0,1,2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerStatsTitle">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorOrangeLight"

                    >

                    <TextView
                        android:id="@+id/killsMatchText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Kills"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dbnoMatchText"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="DBNOs"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/assistsMatchText"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_margin="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Assists"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </TableRow>


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorOrangeLight">

                    <TextView
                        android:id="@+id/killsMatchValue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dbnosMatchValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/assistsMatchValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_margin="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </TableRow>


            </TableLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="256dp"
                android:layout_height="23dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="WXC Team Stats"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/supportSniperTable"
                app:layout_constraintVertical_bias="1.0" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>